<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="application.Controller" xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" spacing="10" styleClass="root">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <Label fx:id="dateLabel" text="To Do" styleClass="header" textAlignment="CENTER">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <Separator />
    <VBox fx:id="vbox" spacing="5"/>
    <HBox>
        <TextField fx:id="newToDoTextField" promptText="Enter a new to do item"/>
        <Button fx:id="addButton" text="+" onAction="#addToDoItem"/>
    </HBox>
</VBox>
